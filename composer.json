{
    "name": "paullereverend/nextcloudduplicatefinder",
    "description": "Find your duplicate files and remove them",
    "type": "project",
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Paul Lereverend"
        }
    ],
    "support": {
        "issues": "https://github.com/PaulLereverend/NextcloudDuplicateFinder/issues",
        "source": "https://github.com/PaulLereverend/NextcloudDuplicateFinder/"
    },
    "require-dev": {
        "doctrine/dbal": "3.3.8",
        "nextcloud/coding-standard": "^1.0.0",
        "nextcloud/ocp": "^25.0",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpstan/phpstan": "^1.10.11",
        "phpunit/phpunit": "^9.0",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/console": "4.4.30",
        "symfony/event-dispatcher": "4.4.30",
        "vimeo/psalm": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "OCA\\DuplicateFinder\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OCP\\": "vendor/nextcloud/ocp/OCP"
        }
    },
    "scripts": {
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "lint": "find . -name \\*.php -not -path './vendor/*' -print0 | xargs -0 -n1 php -l",
        "psalm": "psalm",
        "psalm:fix": "psalm --alter --issues=InvalidReturnType,InvalidNullableReturnType,MismatchingDocblockParamType,MismatchingDocblockReturnType,MissingParamType,InvalidFalsableReturnType",
        "psalm:update-baseline": "psalm --update-baseline",
        "test": [
            "@test:unit",
            "@test:integration"
        ],
        "test:integration": "vendor/bin/phpunit -c tests/phpunit.integration.xml && cd tests/integration && ./run.sh",
        "test:unit": "vendor/bin/phpunit -c tests/phpunit.xml"
    }
}